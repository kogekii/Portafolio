---
import Layout from '../../layouts/Layout.astro'
import projects from '../../proyectos/proyectos.json'
import Image from 'astro/components/Image.astro'
import { getTechBadge } from '../../components/functions/getTechBadge'
export function getStaticPaths(){

    return projects.map(project => {
        return {
            params: {
                id: project.id
            },
            props: {
                project
            }
        }
    })
}
const {id}  = Astro.params
const {project} = Astro.props
const imageurl = `http://localhost:4321/${project.imagen}`;
---
<Layout title={project.nombre}>
    <div class="flex">
        <article>
            <h1 class="text-secondary text-titulo1 font-semibold">Project {project.nombre}</h1>
            <p class="text-secondary text-titulo4">{project.descripcion}</p>
            <h2 class="text-secondary text-titulo2">Tecnologias</h2>
            <p class="text-secondary text-titulo4">Este proyecto ha sido desarrollado utilizando las siguientes tecnolog√≠as:</p>
            {project.tecnologias.map(tec => {
                return <img src={`https://img.shields.io/badge/${getTechBadge(tec)}`} class="m-1 inline-block"></img>
            })}
        <div class="flex justify-evenly mt-2">
            <a href={project.url} class="text-titulo4 bg-secondary p-1 rounded-md">Ver proyecto</a>
            <a href="/" class="text-titulo4 bg-secondary p-1 rounded-md">Volver</a>
        </div>
        </article>
        <Image src={imageurl} alt={project.nombre} class="w-1/2" width="500" height="500"/>
    </div>
    
    
</Layout>